@page
@model TicTacToe.Pages.ServerTicTacToeModel
@{
    ViewData["Title"] = "ServerTicTacToe";
}

<h2>ServerTicTacToe</h2>
<p>@Model.Turn's Turn</p>
<form>
    <div class="Board">

        @for (int y = 0; y < 3; y++)
        {
            <div class="row">
                @for (int x = 0; x < 3; x++)
                {
                    @if (Model.Board[x, y] == Player.Blank)
                    {
                        <input type="radio" name="cell-@x-@y" class="cell" />}

                    else
                    {< input type = "text" name = "cell-@x-@y" class="cell" />}
                }

            </div>
        }
    </div>


    <input type="hidden" name="turn" value="@Model.Turn" />

    <input type="hidden" name="turn" value="@Model.State" />
    <input type="submit" value="Make a move" />
</form>

